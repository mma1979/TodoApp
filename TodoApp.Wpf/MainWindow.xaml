<Window x:Class="TodoApp.Wpf.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TodoApp.Wpf"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <StackPanel Orientation="Vertical">
        <StackPanel Orientation="Horizontal" Margin="5">
            <Button Content="Categories" Margin="5" Width="75" Click="Button_Click"/>
            <Button Content="Todo" Width="75" Margin="5"/>
        </StackPanel>
        <StackPanel Orientation="Vertical">
            <DataGrid x:Name="gridCtaegories"/>
            <StackPanel Orientation="Horizontal">
                <TextBox x:Name="txtCategory" TextWrapping="Wrap" Text="TextBox" Width="120"/>
                <Button Content="Add" Click="Button_Click_1"/>


            </StackPanel>
        </StackPanel>
    </StackPanel>
</Window>
